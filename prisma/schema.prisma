generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider                         = "prisma-zod-generator"
  output                           = "../lib/validations"
  addInputTypeValidation           = "false"
  createInputTypes                 = "false"
  createOptionalDefaultValuesTypes = "true"
  createPartialTypes               = "true"
  createRelationValuesTypes        = "true"
  modelCase                        = "camelCase"
  modelSuffix                      = "Schema"
  prismaJsonNullability            = "true"
  relationModel                    = "true"
  useDecimalJs                     = "true"
  validateWhereUniqueInput         = "false"
  writeBarrelFiles                 = "true"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  phone         String?   // NOVO
  cpf           String?   @unique // NOVO
  cnpj          String?   @unique // NOVO
  role          Role      @default(CLIENT)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  quotes        Quote[]
  rentals       rentals[]
  sessions      Session[]
  addresses     Address[] // NOVO
  cart          Cart?     // NOVO
  approvedQuotes  Quote[]       @relation("ApprovedQuotes")
  rejectedQuotes  Quote[]       @relation("RejectedQuotes")
  auditLogs     AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
  @@map("verificationtokens")
}

// NOVO MODELO
model Address {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  zipCode      String
  isPrimary    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@map("addresses")
}

// NOVO MODELO
model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("carts")
}

// NOVO MODELO
model CartItem {
  id          String    @id @default(cuid())
  cartId      String
  cart        Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  quantity    Int
  days        Int
  pricePerDay Decimal
  finalPrice  Decimal?
  createdAt   DateTime  @default(now())

  @@unique([cartId, equipmentId])
  @@index([equipmentId])
  @@map("cart_items")
}

model Category {
  id          String      @id @default(uuid()) @db.Uuid
  name        String
  description String?
  icon        String?
  iconColor   String      @default("#3B82F6")
  bgColor     String      @default("#EFF6FF")
  fontColor   String      @default("#1E40AF")
  slug        String      @unique
  placement   String?     // 'phases' | 'types' | null - Tab onde a categoria aparece (filtro)
  customIcon  Json?        // Ícone customizado (SVG, emoji, URL) como JSON
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  equipments  Equipment[]

  @@map("categories")
}

model Equipment {
  id                String         @id @default(cuid())
  name              String
  description       String?
  pricePerDay       Decimal
  images            String[]
  available         Boolean        @default(true)
  categoryId        String         @db.Uuid
  specifications    Json?          // Technical specifications as JSON
  // Inventory management
  maxStock          Int?           @default(1) // Maximum available quantity
  // Rental period configurations
  dailyDiscount     Int?           @default(0) // Percentage discount for daily rentals
  weeklyDiscount    Int?           @default(0) // Percentage discount for weekly rentals
  biweeklyDiscount  Int?           @default(0) // Percentage discount for biweekly rentals
  monthlyDiscount   Int?           @default(0) // Percentage discount for monthly rentals
  popularPeriod     String?        @default("weekly") // Which period to mark as popular (daily, weekly, biweekly, monthly)

  // Direct value pricing configurations
  dailyDirectValue     Decimal?     // Direct value for daily rentals (overrides discount)
  weeklyDirectValue    Decimal?     // Direct value for weekly rentals (overrides discount)
  biweeklyDirectValue  Decimal?     // Direct value for biweekly rentals (overrides discount)
  monthlyDirectValue   Decimal?     // Direct value for monthly rentals (overrides discount)

  // Pricing method control (percentage or direct value)
  dailyUseDirectValue     Boolean   @default(false) // Use direct value instead of percentage for daily
  weeklyUseDirectValue    Boolean   @default(false) // Use direct value instead of percentage for weekly
  biweeklyUseDirectValue  Boolean   @default(false) // Use direct value instead of percentage for biweekly
  monthlyUseDirectValue   Boolean   @default(false) // Use direct value instead of percentage for monthly
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  category          Category       @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_category")
  quoteItems        QuoteItem[]
  rental_items      rental_items[]
  cartItems         CartItem[] // NOVO
  maintenances      Maintenance[]
  purchasePrice     Decimal?       @db.Decimal // Valor de compra
  purchaseDate      DateTime?      // Data de compra
  depreciationRate Decimal?       @db.Decimal // Taxa de depreciação anual (%)
  hourMeter         Decimal?       @db.Decimal // Horímetro atual
  odometer          Decimal?       @db.Decimal // Odômetro atual

  @@index([categoryId])
  @@map("equipments")
}

model Quote {
  id        String      @id @default(cuid())
  name      String
  email     String
  phone     String
  cpf       String?     // CPF do cliente (opcional)
  cnpj      String?     // CNPJ da empresa (opcional)
  cep       String?     // CEP do cliente (opcional)
  company   String?
  message   String?
  total     Decimal     @default(0)
  status    QuoteStatus @default(PENDING)
  userId    String?

  // Período de locação
  startDate       DateTime?     // Data de início da locação
  endDate         DateTime?     // Data de fim da locação
  validUntil      DateTime?     // Data de validade do orçamento (ex: 7 dias após criação)

  // Logística
  deliveryType    DeliveryType? // DELIVERY, PICKUP, BOTH
  deliveryAddress Json?          // Endereço completo de entrega (se delivery)
  deliveryFee     Decimal?      // Taxa de entrega
  pickupFee       Decimal?      // Taxa de retirada

  // Financeiro
  deposit         Decimal?      // Caução/depósito
  subtotal        Decimal?      // Subtotal antes de taxas
  taxes           Decimal?      // Impostos/taxas
  discount        Decimal?      // Desconto aplicado (se houver)
  finalTotal      Decimal?      // Total final (subtotal + taxas - desconto)

  // Operacional
  priority        Int?          @default(0) // Prioridade (0=normal, 1=alta, 2=urgente)
  internalNotes   String?       // Notas internas (não visíveis ao cliente)
  adminNotes      String?       // Anotações administrativas
  rejectionReason String?       // Motivo da rejeição (se rejeitado)

  // Rastreamento
  approvedAt      DateTime?     // Data de aprovação
  approvedBy      String?       // ID do admin que aprovou
  rejectedAt      DateTime?     // Data de rejeição
  rejectedBy      String?       // ID do admin que rejeitou
  convertedToRentalId String?  // ID da locação gerada (se aprovado e convertido)

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  items     QuoteItem[]
  user      User?       @relation(fields: [userId], references: [id])
  approvedByUser  User?          @relation("ApprovedQuotes", fields: [approvedBy], references: [id])
  rejectedByUser User?          @relation("RejectedQuotes", fields: [rejectedBy], references: [id])
  payments  Payment[]
  rentals   rentals[]

  @@index([userId])
  @@index([startDate])
  @@index([endDate])
  @@index([status])
  @@index([approvedBy])
  @@index([rejectedBy])
  @@map("quotes")
}

model QuoteItem {
  id          String    @id @default(cuid())
  quoteId     String
  equipmentId String
  quantity    Int       @default(1)
  days        Int       @default(1)
  pricePerDay Decimal
  total       Decimal
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  quote       Quote     @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@index([equipmentId])
  @@index([quoteId])
  @@map("quote_items")
}

model rental_items {
  id          String    @id
  rentalid    String
  equipmentid String
  quantity    Int       @default(1)
  priceperday Decimal   @db.Decimal
  totaldays   Int
  totalprice  Decimal   @db.Decimal
  createdat   DateTime? @default(now()) @db.Timestamp(6)
  updatedat   DateTime? @default(now()) @db.Timestamp(6)
  equipments  Equipment @relation(fields: [equipmentid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  rentals     rentals   @relation(fields: [rentalid], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([equipmentid])
  @@index([rentalid])
}

model rentals {
  id           String         @id
  startdate    DateTime       @db.Timestamp(6)
  enddate      DateTime       @db.Timestamp(6)
  total        Decimal        @db.Decimal
  status       String?        @default("PENDING")
  userid       String
  createdat    DateTime?      @default(now()) @db.Timestamp(6)
  updatedat    DateTime?      @default(now()) @db.Timestamp(6)
  quoteId     String?        // Referência ao orçamento que originou esta locação
  quote        Quote?         @relation(fields: [quoteId], references: [id])
  lateFee      Decimal?       @db.Decimal // Multa por atraso
  extensionDays Int?          // Dias de prorrogação
  extensionFee  Decimal?      @db.Decimal // Taxa de prorrogação
  checkInAt    DateTime?      @db.Timestamp(6) // Data/hora de check-in
  checkOutAt   DateTime?      @db.Timestamp(6) // Data/hora de check-out
  notes        String?        // Notas internas
  rental_items rental_items[]
  users        User           @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  payments     Payment[]
  deliveries   Delivery[]
  contract     Contract?

  @@index([userid])
  @@index([quoteId])
  @@index([status])
  @@index([startdate])
  @@index([enddate])
}

model Setting {
  id                  String   @id @default(uuid())
  companyPhone        String   @default("")
  companyIconUrl      String   @default("")
  aboutUsText         String   @default("")
  companyAddress      String   @default("")
  heroCarousel        Json     @default("[]")
  contactEmail        String   @default("")
  marketingEmail      String   @default("")
  socialLinks         Json     @default("{}")
  seoTitle            String   @default("GB Locações - Equipamentos para Construção")
  seoDescription      String   @default("Locação de equipamentos para construção civil com qualidade e segurança")
  themeColorPrimary   String   @default("#ea580c")
  maintenanceMode     Boolean  @default(false)
  analyticsTrackingId String   @default("")
  footerText          String   @default("")
  businessHours       Json     @default("{}")
  supportChat         Boolean  @default(true)
  whatsappNumber      String   @default("")
  favicon             String   @default("")
  logoSecondary       String   @default("")
  defaultLanguage     String   @default("pt-BR")
  baseCurrency        String   @default("BRL")
  maintenanceMessage  String   @default("Site em manutenção. Voltamos em breve!")
  smtpConfig          Json     @default("{}")
  uploadLimits        Json     @default("{}")
  securityConfig      Json     @default("{}")
  customCss           String   @default("")
  customJs            String   @default("")
  waveAnimation       String   @default("animated")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("settings")
}

// Sistema de Manutenção
model Maintenance {
  id          String           @id @default(cuid())
  equipmentId String
  equipment   Equipment        @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  type        MaintenanceType
  scheduledAt DateTime
  completedAt DateTime?
  cost        Decimal?        @db.Decimal
  laborCost   Decimal?        @db.Decimal // Custo de mão de obra
  partsCost   Decimal?        @db.Decimal // Custo de peças
  description String?
  notes       String?         // Notas técnicas
  technician  String?         // Nome do técnico responsável
  status      MaintenanceStatus @default(SCHEDULED)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([equipmentId])
  @@index([scheduledAt])
  @@index([status])
  @@map("maintenances")
}

// Sistema de Pagamentos
model Payment {
  id            String        @id @default(cuid())
  rentalId      String?
  quoteId       String?
  rental        rentals?      @relation(fields: [rentalId], references: [id], onDelete: SetNull)
  quote         Quote?        @relation(fields: [quoteId], references: [id], onDelete: SetNull)
  amount        Decimal       @db.Decimal
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  type          PaymentType   @default(RENTAL)
  paidAt        DateTime?     @db.Timestamp(6)
  dueDate       DateTime      @db.Timestamp(6)
  invoiceNumber String?
  transactionId String?       // ID da transação no gateway
  pixCode       String?       // Código PIX (se método PIX)
  pixQrCode     String?       // QR Code PIX
  metadata      Json?         // Dados adicionais do pagamento
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([rentalId])
  @@index([quoteId])
  @@index([status])
  @@index([dueDate])
  @@index([method])
  @@map("payments")
}

// Sistema de Entregas e Coletas
model Delivery {
  id          String        @id @default(cuid())
  rentalId   String
  rental     rentals       @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  type       DeliveryType  // DELIVERY, PICKUP
  status     DeliveryStatus @default(SCHEDULED)
  scheduledAt DateTime
  completedAt DateTime?     @db.Timestamp(6)
  address    Json           // Endereço completo
  distance   Decimal?       @db.Decimal // Distância em km
  vehicleId  String?        // ID do veículo usado
  driverId   String?        // ID do motorista
  driverName String?       // Nome do motorista
  photos     String[]       // URLs das fotos
  checklist Json?           // Checklist de saída/entrada
  notes      String?        // Observações
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@index([rentalId])
  @@index([status])
  @@index([scheduledAt])
  @@index([type])
  @@map("deliveries")
}

// Veículos para logística
model Vehicle {
  id          String   @id @default(cuid())
  plate       String   @unique // Placa do veículo
  brand       String?  // Marca
  model       String?  // Modelo
  year        Int?     // Ano
  type        VehicleType @default(TRUCK)
  status      VehicleStatus @default(AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("vehicles")
}

// Motoristas
model Driver {
  id          String   @id @default(cuid())
  name        String
  phone       String
  cnh         String?  // Número da CNH
  cnhCategory String?  // Categoria da CNH
  status      DriverStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("drivers")
}

// Contratos e Documentos
model Contract {
  id          String   @id @default(cuid())
  rentalId   String   @unique
  rental     rentals  @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  template   String?  // Template usado
  content    String?  // Conteúdo do contrato (HTML/PDF)
  pdfUrl     String?  // URL do PDF gerado
  signedAt   DateTime? // Data de assinatura
  signedBy   String?  // ID do usuário que assinou
  zapSignId  String?  // ID no ZapSign
  status     ContractStatus @default(DRAFT)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([rentalId])
  @@index([status])
  @@map("contracts")
}

// Log de Auditoria
model AuditLog {
  id          String   @id @default(cuid())
  userId      String?  // Usuário que executou a ação
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action      String   // Tipo de ação (CREATE, UPDATE, DELETE, etc.)
  entity      String   // Entidade afetada (Equipment, Quote, etc.)
  entityId    String   // ID da entidade
  changes     Json?    // Mudanças realizadas (before/after)
  ipAddress  String?  // IP do usuário
  userAgent  String?  // User agent
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

// Permissões por módulo
model Permission {
  id          String   @id @default(cuid())
  role        Role
  module      String   // Módulo (EQUIPMENTS, QUOTES, RENTALS, etc.)
  action      String   // Ação (READ, WRITE, DELETE, APPROVE, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([role, module, action])
  @@index([role])
  @@map("permissions")
}

enum Role {
  ADMIN
  CLIENT
}

enum QuoteStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum DeliveryStatus {
  SCHEDULED
  IN_TRANSIT
  COMPLETED
  CANCELLED
  FAILED
}

enum DeliveryType {
  DELIVERY
  PICKUP
}

enum PaymentMethod {
  PIX
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  CASH
  BOLETO
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
  REFUNDED
}

enum PaymentType {
  RENTAL
  DEPOSIT
  FINE
  DAMAGE
  LATE_FEE
}

enum RentalItemStatus {
  RENTED
  RETURNED
  DAMAGED
  LOST
}

enum RentalStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  OVERDUE
  PENDING_RETURN
}

enum UserRole {
  ADMIN
  OPERATOR
  FINANCIAL
  CUSTOMER
}

enum delivery_type {
  pickup
  delivery
  both
}

enum quote_status {
  pending
  approved
  rejected
  expired
}

enum user_role {
  ADMIN
  OPERATOR
  FINANCIAL
  CUSTOMER
}

enum MaintenanceType {
  PREVENTIVE
  CORRECTIVE
  INSPECTION
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum VehicleType {
  TRUCK
  VAN
  PICKUP
  MOTORCYCLE
}

enum VehicleStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
  OUT_OF_SERVICE
}

enum DriverStatus {
  ACTIVE
  INACTIVE
  ON_LEAVE
}

enum ContractStatus {
  DRAFT
  SENT
  SIGNED
  EXPIRED
  CANCELLED
}
